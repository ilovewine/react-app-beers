root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = false
max_line_length = 120
tab_width = 2

[*.css]
indent_style = space

[*.scss]
indent_size = 2
indent_style = space

[{*.cjs,*.js}]
indent_size = 2
indent_style = space
max_line_length = 130
tab_width = 2

[{*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.prettierrc,.stylelintrc,bowerrc,composer.lock,jest.config}]
indent_size = 2
indent_style = space

[{*.htm,*.html,*.ng,*.sht,*.shtm,*.shtml}]
indent_size = 2
indent_style = space
tab_width = 2
